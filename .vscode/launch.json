  "version": "0.2.0",
  "configurations": [
    {
      "name": "Cortex Debug",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/flappy-bird-ffi",
      "request": "launch",
      "type": "cortex-debug",
      "runToEntryPoint": "main",
      "postLaunchCommands": [
        "monitor reset" // Resets the target
        // "disconnect",         // Disconnects from the target
        // "quit"                // Exits GDB
      ],
      "servertype": "stlink",
      "svdFile": "${workspaceFolder}/STM32F303.svd",
      "device": "STM32F303",
      "preLaunchTask": "rust: cargo build[MCU]",
      "showDevDebugOutput": "raw"
    }
  ]
}
